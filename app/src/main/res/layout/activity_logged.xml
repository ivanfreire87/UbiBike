<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">



        <Button
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:text="Messages"
            android:onClick = "messages"
            android:id="@+id/buttonMessages"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:text="Points"
            android:onClick = "points"
            android:id="@+id/buttonPoints"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_below="@+id/buttonMessages"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:text="Trajectory"
            android:onClick = "trajectory"
            android:id="@+id/buttonTrajectory"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_below="@+id/buttonPoints"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:text="Stations"
            android:onClick = "stations"
            android:id="@+id/buttonStations"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_below="@+id/buttonTrajectory"
            android:layout_alignLeft="@+id/buttonTrajectory"
            android:layout_alignStart="@+id/buttonTrajectory" />



</RelativeLayout>
